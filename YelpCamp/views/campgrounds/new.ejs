<% include ../partials/header%>
<div class="container forms">
    <h1>New campground</h1>
    <form action="/campgrounds" method="POST">
        <div class="form-group">
            <label >Camp Name</label>
            <input type="text" class="form-control" name="name" placeholder="Enter camp name">
        </div>
        <div class="form-group">
            <label >Camp image url</label>
            <input type="text" class="form-control" name="image" placeholder="Enter camp image url">
        </div>
        <div class="form-group">
            <label >Camp Price (dollar/night)</label>
            <input type="number" class="form-control" name="price" placeholder="Enter price (dollar/night)" min="0" step="0.01">
        </div>
        <div class="form-group">
            <label >Description</label>
            <input type="text" class="form-control  " name="description" placeholder="Enter camp description">
        </div>
        <button type="submit" class="btn btn-primary btn-lg float-right">Submit</button>
    </form>
</div>
<% include ../partials/footer%>