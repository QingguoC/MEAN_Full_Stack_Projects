<% include ../partials/header%>
<div class="container forms">
    <h1>Edit campground <%= campground.name%></h1>
    <form action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label >Camp Name</label>
            <input type="text" class="form-control" name="camp[name]" value="<%= campground.name%>">
        </div>
        <div class="form-group">
            <label >Camp image url</label>
            <input type="text" class="form-control" name="camp[image]" value="<%= campground.image%>">
        </div>
        <div class="form-group">
            <label >Camp Price (dollar/night)</label>
            <input type="number" class="form-control" name="camp[price]" value="<%= campground.price%>" min="0" step="0.01">
        </div>
        <div class="form-group">
            <label >Description</label>
            <input type="text" class="form-control  " name="camp[description]" value="<%= campground.description%>">
        </div>
        <button type="submit" class="btn btn-primary btn-lg float-right">Submit</button>
    </form>
</div>
<% include ../partials/footer%>