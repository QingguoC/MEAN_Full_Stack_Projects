<% include ../partials/header%>
<div class="container main">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To YelpCamp!</h1>
            <p>View our hand-picked campground from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campground</a>
            </p>
        </div>
    </header>


    <div class="row" style="display:flex;flex-wrap:wrap;">
        <% campgrounds.forEach( function (campground) { %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img class="img-fluid img-thumbnail" src="<%= campground.image%>">
                    <div class="caption">
                        <h4><%= campground.name%></h4>
                        <p>
                            <a href="/campgrounds/<%= campground._id%>">More Information</a>
                        </p>
                    </div>
                </div>
            </div>
        <%});%>
    </div>
</div>
<% include ../partials/footer%>