<% include ../partials/header%>
<div class="container">
    <h1>Edit comment for <%= campground.name%> posted by <%= comment.author.username%></h1>
    <form action="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>?_method=PUT" method="POST">
        <div class="form-group">
            <label >Comment</label>
            <input type="text" class="form-control" name="comment[text]" value="<%= comment.text%>" required>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
<% include ../partials/footer%>